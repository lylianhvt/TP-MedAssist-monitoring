{
  "__inputs": [
    {
      "name": "DS_PROMETHEUS",
      "label": "Prometheus",
      "description": "",
      "type": "datasource",
      "pluginId": "prometheus",
      "pluginName": "Prometheus"
    }
  ],
  "title": "USE Method - Infrastructure Monitoring",
  "panels": [
    {
      "type": "graph",
      "title": "CPU Utilization (%)",
      "targets": [{"expr": "100 - (avg by(instance) (rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)", "legendFormat": "{{instance}}"}],
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
    },
    {
      "type": "graph",
      "title": "CPU Saturation (Load Average)",
      "targets": [{"expr": "node_load1", "legendFormat": "{{instance}}"}],
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
    },
    {
      "type": "graph",
      "title": "Memory Utilization (%)",
      "targets": [{"expr": "100 * (1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes))", "legendFormat": "{{instance}}"}],
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
    },
    {
      "type": "graph",
      "title": "Memory Saturation (Swap Usage)",
      "targets": [{"expr": "node_memory_SwapTotal_bytes - node_memory_SwapFree_bytes", "legendFormat": "{{instance}}"}],
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
    },
    {
      "type": "graph",
      "title": "Network Utilization (Bytes/s)",
      "targets": [{"expr": "rate(node_network_receive_bytes_total[5m])", "legendFormat": "in {{instance}}"}, {"expr": "rate(node_network_transmit_bytes_total[5m])", "legendFormat": "out {{instance}}"}],
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
    },
    {
      "type": "graph",
      "title": "Network Errors",
      "targets": [{"expr": "rate(node_network_receive_errs_total[5m])", "legendFormat": "in {{instance}}"}, {"expr": "rate(node_network_transmit_errs_total[5m])", "legendFormat": "out {{instance}}"}],
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
    }
  ],
  "schemaVersion": 27,
  "version": 1,
  "refresh": "10s",
  "datasource": null
}
